# Django Security
DJANGO_SECRET_KEY=your-super-secret-key-here-minimum-50-characters-long
DEBUG=False

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database (optional - defaults to SQLite, Render provides PostgreSQL)
# For Render: DATABASE_URL is automatically set by Render
# For local development: DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (optional - for future use)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@caqm.com

# Google OAuth (optional - for social authentication)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Render Deployment
RENDER=true
